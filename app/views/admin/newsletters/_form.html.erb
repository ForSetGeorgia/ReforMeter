<%= semantic_form_for [:admin, @newsletter] do |f| %>
  <%= f.semantic_errors *f.object.errors.keys %>
  <%= f.inputs do %>
    <%= f.input :email, as: :email %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit,
                 as: :input,
                 label: if @newsletter.new_record?
                          t('shared.actions.with_obj.create',
                            obj: t('activerecord.models.newsletter', count: 1))
                        else
                          t('shared.actions.with_obj.update',
                            obj: t('activerecord.models.newsletter', count: 1))
                        end,
                 button_html: { class: 'btn btn-success' } %>
  <% end %>
<% end %>
