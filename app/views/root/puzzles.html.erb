<%
page_title t('.title')
@do_not_use_default_page_layout = true
%>

<div class='contentSection mod-overlap-top-image'>

  <%= bootstrap_flash %>
  <header class='contentSection-header'>

    <div class='contentSection-header-title'>

      <h1 class='heading'>
        <%= yield(:page_title) %>
      </h1>

    </div>

  </header>

  <div class='contentSection-body mod-no-padding puzzle-list'>

    <% if @puzzles.present? %>
      <% @puzzles.each do |puzzle| %>
        <%= render partial: 'shared/puzzle_block', locals: { puzzle: puzzle, with_title: true, with_summary: true } %>
      <% end %>
    <% else %>
      <p class="alert alert-warning">
        <%= t('.no_data') %>
      </p>
    <% end %>

  </div>

</div>
