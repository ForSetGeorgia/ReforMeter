<header class='app-header'>

  <a class='app-header-brand' href='<%= root_path %>'>
    <%= inline_svg("#{Rails.root}/app/assets/images/logo_reformeter_eng.svg") %>

    <p class='app-header-brand-subtext'>
      Georgian Reform Progress - Tracking System
    </p>

  </a>

  <div class='app-header-nav'>

    <button class='app-header-nav-button js-toggle-navigation'>
      <span class='app-header-nav-button-icon-bar'></span>
      <span class='app-header-nav-button-icon-bar'></span>
      <span class='app-header-nav-button-icon-bar'></span>
    </button>

    <ul class='app-header-nav-list js-act-as-navigation is-hidden-on-mobile'>

      <li class='app-header-nav-list-item'>
        <%= link_to t('.experts'),
                    experts_path,
                    class: 'app-header-nav-list-item-link' %>
      </li>

      <li class='app-header-nav-list-item'>
        <%= link_to t('.reforms'),
                    reforms_path,
                    class: 'app-header-nav-list-item-link' %>
      </li>

      <li class='app-header-nav-list-item'>
        <%= link_to t('.about'),
                    about_path,
                    class: 'app-header-nav-list-item-link' %>
      </li>

      <li class='app-header-nav-list-item'>
        <%= link_to t('.download_data_and_reports'),
                    download_data_and_reports_path,
                    class: 'app-header-nav-list-item-link' %>
      </li>

      <li class='app-header-nav-list-item'>
        <%= link_to 'Contact',
                    '#',
                    class: 'app-header-nav-list-item-link' %>
      </li>

      <li lang='ka' class='app-header-nav-list-item mod-language'>
        <%= link_to 'ქართული',
                    '#',
                    class: 'app-header-nav-list-item-link' %>
      </li>

    </ul>

  </div>

</header>
