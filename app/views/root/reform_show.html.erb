  <li>
    <%= t('shared.categories.legislation_regulation') %>:
    <%= @reform_survey.government_category4_score %> <%= generate_change_icon(@reform_survey.government_category4_change) %>
  </li>
</ul>


<div>
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#government_history" aria-controls="government_history" role="tab" data-toggle="tab"><%= t('.header.government_history') %></a></li>
    <li role="presentation"><a href="#government_methodology" aria-controls="government_methodology" role="tab" data-toggle="tab"><%= t('.header.methodology') %></a></li>
  </ul>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="government_history">
      insert chart here
    </div>

    <div role="tabpanel" class="tab-pane" id="government_methodology">
