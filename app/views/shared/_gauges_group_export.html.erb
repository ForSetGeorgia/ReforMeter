<div class='chartExport js-act-as-chart-export-container'>
  
  <button class='chartExport-button js-toggle-chart-group-export-menu' type='button'>
    <%= inline_svg('download.svg') %>
  </button>

  <div class='chartExport-menu js-act-as-chart-export-menu is-hidden'>

    <button class='chartExport-menu-item js-export-chart-group' data-export-id='<%= exportID %>' data-export-type='image/png' type='button'>
      <%= t('shared.chart_download.download_png') %>
    </button>

    <button class='chartExport-menu-item js-export-chart-group' data-export-id='<%= exportID %>' data-export-type='image/jpeg' type='button'>
      <%= t('shared.chart_download.download_jpeg') %>
    </button>

    <button class='chartExport-menu-item js-export-chart-group' data-export-id='<%= exportID %>' data-export-type='application/pdf' type='button'>
      <%= t('shared.chart_download.download_pdf') %>
    </button>

    <button class='chartExport-menu-item js-export-chart-group' data-export-id='<%= exportID %>' data-export-type='image/svg+xml' type='button'>
      <%= t('shared.chart_download.download_svg') %>
    </button>

  </div>
  
</div>

