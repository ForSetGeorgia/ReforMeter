<%
  page_title "#{@puzzle.title} (#{I18n.l(@puzzle.date)})"
  page_description "#{@puzzle.summary}"
  @do_not_use_default_page_layout = true
%>


<div class='contentSection mod-overlap-top-image mod-no-background'>

  <%= bootstrap_flash %>
  <header class='contentSection-header mod-white-background'>

    <div class='contentSection-header-title'>

      <h1 class='heading mod-puzzle'>
        <%= @puzzle.title %>
        <span><%= I18n.l(@puzzle.date) %></span>
      </h1>

    </div>

  </header>

  <div class='contentSection-body mod-no-padding'>
    <%= render partial: 'shared/puzzle_block', locals: { puzzle: @puzzle, with_media: true, with_content: true, with_links: true } %>
  </div>
</div>

