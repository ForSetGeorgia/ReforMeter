<%
page_title t('.title')
@do_not_use_default_page_layout = true
%>

<div class='contentSection mod-overlap-top-image'>

  <%= bootstrap_flash %>

  <header class='contentSection-header'>

    <div class='contentSection-header-title'>

      <h1 class='heading'>
        <%= yield(:page_title) %>
      </h1>

    </div>

  </header>

  <div class='contentSection-body'>

    <% if !@news.present? %>

      <p class="alert alert-warning">
        <%= t('.no_data') %>
      </p>

    <% end %>

  </div>

</div>

<% if @news.present? %>

  <% @news.each do |news| %>

    <div>
      <h2><%= link_to(news.title, news_show_path(news)) %></h2>
      <br />
      <%= I18n.l(news.date) if news.date.present? %>
      <br />
      <%= simple_format(news.summary) if news.summary.present? %>
    </div>

  <% end %>

<% end %>
