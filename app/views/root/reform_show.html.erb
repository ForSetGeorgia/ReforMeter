    <%= simple_format_no_tags(@reform_survey.government_summary) %>
  </div>
<% end %>

<ul>
  <li>
    <%= t('shared.categories.overall') %>:
    <%= @reform_survey.government_overall_score %> <%= generate_change_icon(@reform_survey.government_overall_change) %>
  </li>
