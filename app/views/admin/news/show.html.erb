<%
  page_title @news.title
  @do_not_use_default_page_layout = true
%>


<div class='contentSection mod-overlap-top-image mod-no-background'>

  <%= bootstrap_flash %>
  <header class='contentSection-header mod-white-background'>

    <div class='contentSection-header-title'>

      <h1 class='heading mod-news'>
        <%= @news.title %>
        <span><%= I18n.l(@news.date) %></span>
      </h1>

    </div>

  </header>

  <div class='contentSection-body mod-no-padding'>
    <div class='actions-container'>
      <%= render partial: 'shared/show_actions',
            locals: {
              object: @news,
              index_path: admin_news_index_path,
              show_path: admin_news_path(@news),
              edit_path: edit_admin_news_path(@news)
                    }
      %>
    </div>
    <%= render partial: 'shared/news_block', locals: { news: @news, with_poster: true, with_media: true, with_content: true, with_links: true } %>
  </div>
</div>
