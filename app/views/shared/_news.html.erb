<aside>

  <h2 class='u-hide-visually'>
    Expert News
  </h2>

  <% @news.each do |news| %>

    <section class='contentSection'>

      <% if news.image.exists? %>

        <%= link_to news.url,
                    target: :blank do %>

          <%= image_tag(
                news.image.url('360x200'),
                class: 'responsiveImage') %>

        <% end %>

      <% end %>

      <header class='contentSection-header<%= ' mod-news' if news.image.exists? %>'>

        <h3 class='heading'>

          <%= link_to news.title,
                      news.url,
                      target: :blank,
                      class: 'link mod-no-decoration' %>

        </h3>

      </header>

      <div class='contentSection-body<%= ' mod-no-top-border' if news.image.exists? %>'>

        <%= simple_format("<em>#{I18n.l(news.date)}</em>") if news.date.present? %>

        <%= simple_format(news.summary) %>

      </div>

    </section>

  <% end %>

</aside>
