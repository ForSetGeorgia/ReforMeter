<% page_title t('.title') %>

<% if @expert_text %>
  <div>
    <%= simple_format_no_tags(@expert_text.content) %>
  </div>
<% end %>

<% if @quarters.present? %>

  <div>
    <ul class="nav nav-tabs" role="tabList">
      <li role="presentation" class="active"><a href="#chart" aria-controls="chart" role="tab" data-toggle="tab"><%= t('.header.chart') %></a></li>
      <li role="presentation"><a href="#methodology" aria-controls="methodology" role="tab" data-toggle="tab"><%= t('.header.methodology') %></a></li>
    </ul>
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="chart">
        insert chart here
      </div>

      <div role="tabpanel" class="tab-pane" id="methodology">
        <% if @methodology_expert %>
          <div>
            <%= simple_format_no_tags(@methodology_expert.content) %>
          </div>
        <% else %>
          <p>
           <%= t('.no_methodology') %>
          </p>
        <% end %>
      </div>
    </div>
  </div>



  <h2><%= t('.header.table') %></h2>

  <table class='table table-striped table-hover table-nonfluid'>
    <thead>
      <tr>
        <th><%= t('.table_header.time') %></th>
        <th><%= t('.table_header.overall') %></th>
        <th><%= t('.table_header.summary') %></th>
      </tr>
    </thead>

    <tbody>
      <% @quarters.each do |quarter| %>
        <tr>
          <td>
            <%= link_to quarter.time_period, expert_show_path(quarter.slug) %>
          </td>
          <td>
            <%= quarter.expert_survey.overall_score %>
            <%= generate_change_icon(quarter.expert_survey.overall_change) %>
          </td>
          <td>
            <%= strip_tags_nbsp(quarter.expert_survey.summary) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

<% else %>

  <p class="alert alert-warning">
    <%= t('.no_data') %>
  </p>

<% end %>