  </li>
  <li>
    <%= t('shared.categories.capacity_building') %>:
    <%= @reform_survey.government_category2_score %> <%= generate_change_icon(@reform_survey.government_category2_change) %>
  </li>
  <li>
    <%= t('shared.categories.infastructure_budgeting') %>:
    <%= @reform_survey.government_category3_score %> <%= generate_change_icon(@reform_survey.government_category3_change) %>
